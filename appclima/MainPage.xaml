<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="appclima.MainPage"
             Shell.NavBarIsVisible="false">

    

    <Grid RowSpacing="10"
          ColumnSpacing="10">        
     <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="80"/>
      <RowDefinition Height="80"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="150"/>
     </Grid.RowDefinitions>

     <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="*"/>
     </Grid.ColumnDefinitions>

    <Image Source="noiteestrelada.jpg"
           Aspect="AspectFill"
           Grid.RowSpan="5"
           Grid.ColumnSpan="3"/>

    <Frame CornerRadius="30"
           Margin="10,0,0,0"
           Padding="0"
           BackgroundColor="#88ffffff"
           Grid.Row="1"
           Grid.Column="0"
           Grid.RowSpan="2">

       <Label x:Name="Temperatura"
              VerticalOpitions="Start">

       <Label Text="°C"
              >
 
       <Label x:Name="Descricao"
             >

       <Label x:Name="Cidade"
              >
     </Grid>   
       </Frame>
          

    <Frame CornerRadius="30"
           Padding="0"
           BackgroundColor="#88ffffff"
           Grid.Row="1"
           Grid.Column="1">


       <Label Text="Chuva:"
              >

       <Label Text="Humidade:"
              >

       <Label x:Name="Cidade">
       </VerticalStackLayout>  
       </Frame>

    <Frame CornerRadius="30"
           Padding="0"
           BackgroundColor="#88ffffff"
           Margin="0,0,10,0"
           Grid.Row="1"
           Grid.Column="2"/>

    <Frame CornerRadius="30"
           Padding="0"
           BackgroundColor="#88ffffff"
           Grid.Row="2"
           Grid.Column="1"/>

    <Frame CornerRadius="30"
           Padding="0"
           Margin="0,0,10,0"
           BackgroundColor="#88ffffff"
           Grid.Row="2"
           Grid.Column="2"/>

    <Frame CornerRadius="30"
           Padding="0"
           BackgroundColor="#88ffffff"
           Margin="10,0,10,10"
           Grid.Row="4"
           Grid.Column="0"
           Grid.ColumnSpan="3"/>

                         
</Grid>     

</ContentPage>
